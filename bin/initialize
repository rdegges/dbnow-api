#!/usr/bin/env node
'use strict';

let Heroku = require('heroku-client');
let async = require('async');
let db = require('../lib/db');
let settings = require('../lib/settings');

let heroku = new Heroku({ token: settings.HEROKU_API_KEY });

function createApps() {
  async.each(settings.AVAILABLE_REGIONS, function(region, callback) {
    let count = 0;

    async.whilst(
      function() {
        return count < settings.MAX_APPS / settings.AVAILABLE_REGIONS.length;
      },
      function(cb) {
        heroku.apps().create({ region: region }, (err, app) => {
          if (err) {
            return cb(new Error('Could not create Heroku app: ' + err));
          }

          count++;
          console.log('Created new Heroku app:', app.name, 'in the', region, 'region.');
          cb();
        });
      },
      function(err) {
        if (err) {
          return callback(err);
        }

        callback();
      }
    );
  }, function(err) {
    if (err) {
      throw err;
    }

    console.log('Successfully created all Heroku applications.');
    return;
  });
}

db.createTables(function(err) {
  if (err) {
    throw err;
  }

  console.log('Successfully created database tables.');
  createApps();
});
